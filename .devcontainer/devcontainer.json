//https://code.visualstudio.com/docs/devcontainers/containers
// uv : https://docs.astral.sh/uv/guides/integration/docker/
// marimo : https://docs.marimo.io/guides/deploying/prebuilt_containers/

{
    "name": "vscodespace",
    "build": {"dockerfile" : "Dockerfile"},
    "workspaceFolder": "/workspace/",
    //https://github.com/cirolosapio/devcontainers-features/tree/main
    //"features":{},
    "customizations": {
        "vscode": {
            "settings":{              
                "python.pythonPath": ".venv/bin/python"
            },
            // listing vscode extensions : code --list-extensions
            // extensions installed : code --list-extensions | % { "$_" }
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-python-envs",
                "ms-azuretools.vscode-containers",
                "ms-azuretools.vscode-docker",
                "ms-python.debugpy",
                "ms-python.vscode-pylance",
                "ms-vscode-remote.remote-containers",
                "marimo-team.vscode-marimo",
                "dbcode.dbcode",
                "ducklake.ducklab",
                "iterative.dvc",
                "iterative.vscode-dvc-pack",
                "docker.docker",
                "dnicolson.binary-plist",
                "streetsidesoftware.code-spell-checker",
                "tamasfe.even-better-toml",
                "yzhang.markdown-all-in-one"
            ]
        }
    }
}
